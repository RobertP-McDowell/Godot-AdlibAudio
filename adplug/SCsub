# SCsub

Import('env')
Import("env_modules")

env_adplug = env_modules.Clone()
env_adplug.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build

env_adplug.Append(CPPPATH=["include"])
env.Append(LIBPATH=[Dir("lib").abspath])

if env.msvc:
    env.Append(LIBS=["libadplug.lib", "liblibbinio.lib"])
else:
    env.Append(LIBS=["libadplug.a", "liblibbinio.a"])